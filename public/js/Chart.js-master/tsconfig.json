{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "node_modules"]
}
