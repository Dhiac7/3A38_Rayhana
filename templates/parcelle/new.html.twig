{% extends 'base.html.twig' %}

{% block title %}Nouvelle Parcelle{% endblock %}

{% block body %}
    <div class="col-tact-stye-one col-xl-7 col-lg-7">
        <div class="contact-form-style-one mb-md-50">
            <h5 class="sub-title text-success">Nouvelle Parcelle</h5>
            <h2 class="heading">Créer une nouvelle parcelle</h2>

            <!-- Formulaire Symfony avec Bootstrap Validation -->
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <!-- Nom de la parcelle -->
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                    <div class="invalid-feedback">Veuillez entrer un nom valide.</div>
                    {{ form_errors(form.nom) }}
                </div>

                <!-- Latitude & Longitude -->
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            {{ form_label(form.latitude) }}
                            {{ form_widget(form.latitude, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                            <div class="invalid-feedback">Latitude invalide (-90 à 90).</div>
                            {{ form_errors(form.latitude) }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            {{ form_label(form.longitude) }}
                            {{ form_widget(form.longitude, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                            <div class="invalid-feedback">Longitude invalide (-180 à 180).</div>
                            {{ form_errors(form.longitude) }}
                        </div>
                    </div>
                </div>

                <!-- Superficie -->
                <div class="form-group">
                    {{ form_label(form.superficie) }}
                    {{ form_widget(form.superficie, { 'attr': {'class': 'form-control', 'required': 'required'} }) }}
                    <div class="invalid-feedback">Superficie invalide (doit être positive).</div>
                    {{ form_errors(form.superficie) }}
                </div>

                <!-- Disponibilité de l'irrigation -->
                <div class="mb-3">
                    {{ form_label(form.irrigationDisponible) }}
                    {{ form_widget(form.irrigationDisponible, { 'attr': {'class': 'form-select'} }) }}
                    <div class="invalid-feedback">Veuillez sélectionner une option.</div>
                    {{ form_errors(form.irrigationDisponible) }}
                </div>



                <!-- Bouton de soumission -->
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Enregistrer
                    </button>
                </div>

            {{ form_end(form) }}

            <!-- Lien de retour -->
            <div class="text-center mt-3">
                <a href="{{ path('app_parcelle_index') }}" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>

    <!-- Script Bootstrap pour la validation -->
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>

{% endblock %}
