{% extends 'baseAdmin.html.twig' %}

{% block title %}Nouvelle Parcelle{% endblock %}

{% block body %}

<div class="main-panel">
    <div class="content-wrapper">
        <!-- Page Header -->
        <div class="page-header">
            <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white me-2">
                    <i class="mdi mdi-home"></i>
                </span> Parcelles
            </h3>
            <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">
                        <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                    </li>
                </ul>
            </nav>
        </div>
    <div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Nouvelle Parcelle</h4>
            <p class="card-description">Créer une nouvelle parcelle</p>

            {{ form_start(form, {'attr': {'class': 'forms-sample', 'novalidate': 'novalidate'}}) }}

            <!-- Type -->
            <div class="form-group">
                {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-select', 'placeholder': 'Type de \'dechet'}}) }}
                <div {{ form_errors(form.type) ? 'class="text-danger"' : '' }}>
                    {{ form_errors(form.type) }}
                </div>
            </div>

            <!-- Quantité -->
            <div class="form-group">
                {{ form_label(form.quantite, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder': 'Quantité'}}) }}
                <div {{ form_errors(form.quantite) ? 'class="text-danger"' : '' }}>
                    {{ form_errors(form.quantite) }}
                </div>
            </div>

            <!-- Date de production -->
            <div class="form-group">
                {{ form_label(form.dateProduction, 'Date de production du déchet', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateProduction, {'attr': {'class': 'form-control'}}) }}
                <div {{ form_errors(form.dateProduction) ? 'class="text-danger"' : '' }}>
                    {{ form_errors(form.dateProduction) }}
                </div>
            </div>

            <!-- Statut -->
            <div class="form-group">
                {{ form_label(form.statut, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                <div {{ form_errors(form.statut) ? 'class="text-danger"' : '' }}>
                    {{ form_errors(form.statut) }}
                </div>
            </div>

            <!-- Date d'expiration -->
            <div class="form-group">
                {{ form_label(form.dateExpiration, "Date d'expiration du déchet", {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateExpiration, {'attr': {'class': 'form-control'}}) }}
                <div {{ form_errors(form.dateExpiration) ? 'class="text-danger"' : '' }}>
                    {{ form_errors(form.dateExpiration) }}
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-gradient-primary me-2 w-100">
                <i class="mdi mdi-content-save"></i> Modifier
            </button>

            <!-- Additional Buttons -->
            <a href="{{ path('app_parcelle_dashboard_index') }}" class="btn btn-light">
                <i class="fas fa-arrow-left"></i> Retour
            </a>

            {{ form_end(form) }}

        </div>
    </div>
</div>


        </div>
    </div>
{% endblock %}