{% block body %}
        <div class="card-body">
          <h4 class="card-title text-center">Liste des déchets</h4>
          <p class="card-description text-center">Voici tous les déchets disponibles.</p>

          {% if dechets is not empty %}
          <!-- Tableau sans bordure -->
          <div class="table-responsive">
            <table class="table table-borderless">
              <thead>
                <tr class="text-center">
                  <th>Type</th>
                  <th>Quantité</th>
                  <th>Date de production</th>
                  <th>Statut</th>
                  <th>Date d'expiration</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {% for dechet in dechets %}
                <tr class="align-middle text-center">
                  <td>{{ dechet.type }}</td>
                  <td>{{ dechet.quantite }}</td>
                  <td>{{ dechet.dateProduction|date("d/m/Y") }}</td>
                  <td>{{ dechet.statut }}</td>
                  <td>{{ dechet.dateExpiration ? dechet.dateExpiration|date("d/m/Y") : 'Non définie' }}</td>
                  <td>
                    <a href="{{ path('app_dechet_edit', {'id': dechet.id}) }}" class="btn btn-sm" style="background-color:green; color: rgb(189, 196, 190);">Modifier</a>
                    <a href="{{ path('app_dechet_delete', {'id': dechet.id}) }}" class="btn btn-sm" style="background-color:red; color: rgb(189, 196, 190);" data-id="{{ dechet.id }}">Supprimer</a>
                  </td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
          {% else %}
          <p class="text-center">Aucun déchet trouvé.</p>
          {% endif %}

        </div>
   

<!-- Script JavaScript pour la suppression AJAX -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll('.btn-delete').forEach(function (button) {
        button.addEventListener('click', function (e) {
            e.preventDefault();
            let dechetId = this.getAttribute('data-id');

            fetch("{{ path('app_dechet_delete_ajax') }}", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ id: dechetId }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.querySelector(`[data-id='${dechetId}']`).closest('tr').remove();
                } else {
                    alert("Erreur lors de la suppression : " + data.message);
                }
            });
        });
    });
});
</script>
{% endblock %}
