{% extends 'base.html.twig' %}

{% block title %}Modifier le dechet{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier le dechet </h1>

        <div class="card shadow p-4">
            {{ form_start(form) }}

 <div class="mb-3">
                {{ form_label(form.quantite) }}
                {{ form_widget(form.quantite, { 'class': 'form-select', 'required': 'required' }) }}
                {{ form_errors(form.quantite) }}
            </div>

  <div class="mb-3">
                {{ form_label(form.dateProduction) }}
                {{ form_widget(form.dateProduction, { 'attr': {'class': 'form-control', 'type': 'date'} }) }}
                {{ form_errors(form.dateProduction) }}
            </div>

<div class="mb-3">
                {{ form_label(form.statut) }}
                {{ form_widget(form.statut, { 'class': 'form-select', 'required': 'required' }) }}
                {{ form_errors(form.statut) }}
            </div>
  
                 <div class="mb-3">
                {{ form_label(form.date_expiration) }}
                {{ form_widget(form.date_expiration, { 'attr': {'class': 'form-control', 'type': 'date'} }) }}
                {{ form_errors(form.date_expiration) }}
            </div>

            <button class="btn btn-success">Mettre Ã  jour</button>
            <a href="{{ path('app_dechet_index') }}" class="btn btn-secondary">Annuler</a>

            {{ form_end(form) }}
        </div>

        <div class="mt-3">
            {{ include('dechet/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
