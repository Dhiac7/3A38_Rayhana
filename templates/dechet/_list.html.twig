
{% block body %}
<div class="main-panel">
  <div class="content-wrapper">
    <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-center">Liste des dechets</h4>
          <p class="card-description text-center">Voici tous les dechets disponibles.</p>
          <!-- Conteneur des dechets -->
          <div id="dechet-container">
              {% for dechet in dechet %}
                  <div class="card mb-3 dechet-card" data-id="{{ dechet.id }}">
                      <div class="row g-0 align-items-center">
                         {# <div class="col-md-4">
                              {% if dechet.photo %}
                                  <img src="{{ asset('uploads/' ~ dechet.photo) }}" alt="Image de l'dechet" class="img-fluid rounded-start">
                              {% else %}
                                  <img src="{{ asset('img/dechet/default.jpg') }}" alt="Image non disponible" class="img-fluid rounded-start">
                              {% endif %}
                          </div>#}
                          <div class="col-md-8">
                              <div class="card-body">
                                  <h5 class="card-title">{{ dechet.type }}</h5>
                                  <p class="card-text">{{ dechet.quantite }}</p>
                                  <p class="card-text"><strong>Date production:</strong> {{ dechet.dateProduction|date("d/m/Y") }}</p>
                                  <p class="card-text"><strong>statut:</strong> {{ dechet.statut }} TND</p>
                                    <p class="card-text"><strong>Date d'expiration:</strong> {{ dechet.dateExpiration|date("d/m/Y") }}</p>

                                  <a href="{{ path('app_dechet_edit', {'id': dechet.id}) }}" class="btn btn-primary">Modifier</a><br>
                                  <a href="#" class="btn btn-danger btn-delete" data-id="{{ dechet.id }}">Supprimer</a>
                              </div>
                          </div>
                      </div>
                  </div>
              {% else %}
                  <p class="text-center">Aucun dechet trouvé.</p>
              {% endfor %}
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<!-- Script JavaScript pour la suppression AJAX -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    // Supprimer un dechet
    document.querySelectorAll('.btn-delete').forEach(function (button) {
        button.addEventListener('click', function (e) {
            e.preventDefault();
            let dechetId = this.getAttribute('data-id');

            fetch("{{ path('app_dechet_delete_ajax') }}", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ id: dechetId }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Si la suppression a réussi, tu peux supprimer l'élément de la page
                    document.querySelector(`[data-id='${dechetId}']`).closest('.dechet-card').remove();
                } else {
                    alert("Erreur lors de la suppression : " + data.message);
                }
            });
        });
    });
});



</script>
{% endblock %}
