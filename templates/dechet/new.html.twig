{% extends 'baseAdmin.html.twig' %}

{% block title %}Nouveau Déchet{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-center">Remplissez le formulaire</h4>
                        {{ form_start(form, {'method': 'POST', 'action': path('app_dechet_new'), 'attr': {'novalidate': 'novalidate','class': 'contact-form contact-form'}}) }}

                        <div class="form-group">
                            {{ form_label(form.type, 'Type du déchet') }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Type du déchet'}}) }}
                            {% if form_errors(form.type) %}
                                <div class="text-danger">{{ form_errors(form.type) }}</div>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.quantite, 'Quantité') }}
                            {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder': 'Quantité'}}) }}
                            {% if form_errors(form.quantite) %}
                                <div class="text-danger">{{ form_errors(form.quantite) }}</div>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.dateProduction, 'Date de production') }}
                            {{ form_widget(form.dateProduction, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.dateProduction) %}
                                <div class="text-danger">{{ form_errors(form.dateProduction) }}</div>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.statut, 'Statut') }}
                            {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                            {% if form_errors(form.statut) %}
                                <div class="text-danger">{{ form_errors(form.statut) }}</div>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.dateExpiration, 'Date d\'expiration') }}
                            {{ form_widget(form.dateExpiration, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.dateExpiration) %}
                                <div class="text-danger">{{ form_errors(form.dateExpiration) }}</div>
                            {% endif %}
                        </div>

                         <button type="submit" class="btn btn-gradient-primary me-2 w-100">
        <i class="mdi mdi-content-save"></i> Enregistrer
    </button>
                        {{ form_end(form) }}

                        <div class="text-center mt-3">
                            <a href="{{ path('app_dechet_index') }}" class="btn btn-secondary">
                                <i class="mdi mdi-arrow-left"></i> Retour à la liste
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- content-wrapper -->
</div> <!-- main-panel -->
{% endblock %}
