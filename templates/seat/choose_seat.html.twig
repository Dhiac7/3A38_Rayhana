{% extends 'base.html.twig' %}

{% block title %}Choisir votre place{% endblock %}

{% block body %}

    <h1>Choisissez votre place</h1>

    <div id="seats-container">
        {% set grouped_places = {} %}

        {% for place in places %}
            {% set row = place.code|first %}

            {# Initialisation correcte du tableau pour éviter l'erreur #}
            {% if grouped_places[row] is not defined %}
                {% set grouped_places = grouped_places|merge({ (row): [] }) %}
            {% endif %}

            {# Ajout des places au bon groupe #}
            {% set grouped_places = grouped_places|merge({ (row): grouped_places[row]|merge([place]) }) %}
        {% endfor %}

        {# Affichage des places par rangée #}
        {% for row, row_places in grouped_places %}
            <div class="seat-row">
                {% for place in row_places %}
                    <button 
                        class="seat-button {% if not place.isAvailable %}disabled{% endif %}" 
                        data-code="{{ place.code }}" 
                        onclick="selectSeat(this)">
                        {{ place.code }}
                    </button>
                {% endfor %}
            </div>
        {% endfor %}
    </div>

    <p id="reservation-message"></p>

    <style>
        #seats-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .seat-row {
            display: flex;
            gap: 5px;
        }

        .seat-button {
            padding: 10px;
            font-size: 14px;
            border-radius: 5px;
            cursor: pointer;
            border: 1px solid black;
            background-color: green;
            color: white;
        }

        .seat-button.disabled {
            background-color: red;
            cursor: not-allowed;
        }
    </style>
    <script src="{{ asset('assetsback/js/seat-selection.js') }}"></script>

{% endblock %}
