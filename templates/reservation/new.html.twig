{% extends 'base.html.twig' %}

{% block title %}Nouvelle reservation {% endblock %}

{% block body %}
  <!-- Start Contact Us 
          <center>
    ============================================= -->
    <div class="contact-area contact-page overflow-hidden bg-gray default-padding d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="sahpe-right-bottom">

            <img src="assets/img/shape/16.png" alt="Image Not Found">
        </div>

        <div class="container">
            <div class="row align-center justify-content-center">
            <div class="bodycenter"> 

                <div class="col-tact-stye-one col-xl-6 col-lg-7">
                <div class="contact-form-style-one mb-md-50 text-center">
                <img src="{{ asset('img/illustration/10.png') }}" alt="Image Not Found" class="mb-4">
                 <h5 class="sub-title">Joignez Rayhana?</h5>
                        <h2 class="heading">Ajouter reservation</h2>

                        {# Start Symfony Form #}
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'contact-form contact-form'}}) }}
                            {% for error in form.vars.errors %}
                                <div class="alert alert-danger">{{ error.message }}-</div>
                            {% endfor %}
                            
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">

                                        {{ form_errors(form.dateReservation)}}
                                        {{ form_widget(form.dateReservation, {'attr': {'class': 'form-control', 'placeholder': 'dateReservation'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">

                                        {{ form_errors(form.statut) }}
                                        {{ form_widget(form.statut, {'attr': {'class': 'form-select', 'placeholder': 'statut'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">

                                        {{ form_errors(form.modePaiement) }}
                                        {{ form_widget(form.modePaiement, {'attr': {'class': 'form-control', 'placeholder': 'modePaiement'}}) }}
                                    </div>
                                </div>
                            </div>
                                           
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary w-100'}}) }}
                                    </div>
                                </div>
                            </div>
                        {{ form_end(form) }}


            <!-- Lien de retour -->
            <div class="text-center mt-3">
                <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary">
                    <i class="fa fa-arrow-left"></i> Retour Ã  la liste
                </a>
            </div>
        </div>
    </div>

</div>

    </center>

    <!-- Script Bootstrap pour la validation -->
    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>

{% endblock %}
