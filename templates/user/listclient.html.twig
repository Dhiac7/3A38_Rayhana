{% extends 'baseAdmin.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Clients</h4>

                        <div class="alert alert-info">
                            <strong>Debug Info (Clients):</strong><br>
                            Current Page: {{ pagination.currentPageNumber }}<br>
                            Total Items: {{ pagination.totalItemCount }}<br>
                            Items per Page: {{ pagination.itemNumberPerPage }}
                        </div>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom prenom</th>
                                    <th>Email</th>
                                    <th>Tel</th>
                                    <th>Cin</th>
                                    <th><center>Actions</center></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in pagination.getItems() %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.nom }} {{user.prenom}}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.tel }}</td>
                                        <td>{{ user.cin }}</td>
                                        <td><center>
                                            <a href="{{ path('app_user_editback', {'id': user.id}) }}" class="btn btn-outline-success btn-sm btn-fw" style="width: 80px;">Modifier</a>
                                            <form method="post" action="{{ path('app_user_deletebackemploye', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button class="btn btn-outline-success btn-sm btn-fw" style="width: 80px;">Supprimer</button>
                                          </form></center></td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5">No clients found.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-center">
                            {{ knp_pagination_render(pagination, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig', {
                                'pageParameterName': 'page_clients'
                            }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
