{% extends 'baseAdmin.html.twig' %}

{% block title %}Clients List{% endblock %}

{% block body %}
    <h1>Clients List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in pagination %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.cin }}</td>
                    <td>
                        <a href="{{ path('app_user_editback', {'id': user.id}) }}" class="btn btn-outline-warning btn-sm">Edit</a>
                        <form method="post" action="{{ path('app_user_deletebackemploye', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button class="btn btn-outline-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No clients found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
