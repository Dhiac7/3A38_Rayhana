{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du Mot de Passe{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Réinitialisation du Mot de Passe</h2>
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            
            <form method="post" action="{{ path('reset_password', {'phoneNumber': phoneNumber}) }}">
                <div class="form-group">
                    <label for="newPassword">Nouveau mot de passe :</label>
                    <input type="password" name="newPassword" id="newPassword" class="form-control" required minlength="6" placeholder="Mot de passe" />
                </div>
                <button type="submit" class="btn btn-primary mt-3">Réinitialiser</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
