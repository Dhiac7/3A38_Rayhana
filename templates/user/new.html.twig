{% extends 'base.html.twig' %}
 {% block header %}
        <header>
            <!-- Start Navigation -->
            <nav class="navbar mobile-sidenav navbar-style-one navbar-sticky navbar-default validnavs white navbar-fixed no-background">
                <div class="container-full d-flex justify-content-between align-items-center">
                    
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="navbar-menu">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>

                    <!-- Start Header Navigation (Moved to the right) -->
                   <div class="navbar-header ms-auto d-flex align-items-center">
    <a class="navbar-brand" href="{{ path('app_home') }}">
        <img src="{{ asset('img/logo-mix.png') }}" class="logo" alt="Logo">
    </a>
</div>

                    </div>
                    <!-- End Header Navigation -->
                </div>   
            </nav>
            <!-- End Navigation -->
        </header>



{% endblock %}

{% block body %}
<center>
  <!-- Start Contact Us 
    ============================================= -->
       <div class="contact-area contact-page overflow-hidden bg-gray default-padding d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="sahpe-right-bottom">
            <img src="assets/img/shape/16.png" alt="Image Not Found">
        </div>
        <div class="container">
            <div class="row align-center justify-content-center">
            <div class="bodycenter"> 

                <div class="col-tact-stye-one col-xl-6 col-lg-7">
                <div class="contact-form-style-one mb-md-50 text-center">
                <img src="{{ asset('img/illustration/10.png') }}" alt="Image Not Found" class="mb-4">
                 <h5 class="sub-title">Joignez Rayhana?</h5>
                        <h2 class="heading">Créer votre compte</h2>

                        {# Start Symfony Form #}
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'contact-form contact-form'}}) }}
                            {% for error in form.vars.errors %}
                                <div class="alert alert-danger">{{ error.message }}</div>
                            {% endfor %}
                            
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        {{ form_errors(form.nom)}}
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        {{ form_errors(form.prenom) }}
                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        {{ form_errors(form.cin) }}
                                        {{ form_widget(form.cin, {'attr': {'class': 'form-control', 'placeholder': 'CIN'}}) }}
                                    </div>
                                </div>
                            </div>
                           <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                {{ form_errors(form.photo) }}
                                {{ form_widget(form.photo, {'attr': {'class': 'form-control', 'placeholder': 'Enter photo URL'}}) }}
                            </div>
                        </div>
                        </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        {{ form_errors(form.role) }}
                                        {{ form_widget(form.role, {'attr': {'class': 'form-control', 'placeholder': 'Rôle'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        {{ form_errors(form.mdp) }}
                                        {{ form_widget(form.mdp, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        {{ form_errors(form.email) }}
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        {{ form_errors(form.tel) }}
                                        {{ form_widget(form.tel, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                                    </div>
                                </div>
                            </div>
                        {{ form_end(form) }}
                        {# End Symfony Form #}
                    </div>
                </div>
            </div>

                
         </div>
        </div>
    </div>
    </center>
{% endblock %}
{% block footer %}
{% endblock %}
