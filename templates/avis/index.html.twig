{% extends 'user/client.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block body %}
    <h1>Avis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_Client</th>
                <!--<th>Id_produit</th>-->
                <th>Rate</th>
                <th>Commentaire</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td>{{ avi.id }}</td>
                <td>{{ avi.idClient }}</td>
                <!--<td>{{ avi.idProduit }}</td>-->
                <td>{{ avi.rate }}</td>
                <td>{{ avi.commentaire }}</td>
                <td>{{ avi.date ? avi.date|date('Y-m-d H:i:s') : '' }}</td>

                <td>
                    <a href="{{ path('app_avis_show', {'id': avi.id}) }}">Show</a>
                    <a href="{{ path('app_avis_edit', {'id': avi.id}) }}">Edit</a>
                    {{ include('avis/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_avis_new') }}">Create new</a>
{% endblock %}
