{% extends 'baseAdmin.html.twig' %}

{% block title %}Vente - {{ vente.nom }}{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <!-- 🟢 Page Header -->
        <div class="page-header">
            <h3 class="page-title">
                <span class="page-title-icon bg-gradient-primary text-white me-2">
                    <i class="mdi mdi-cash"></i>
                </span> Détails de la Vente
            </h3>
            <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_dashboard') }}">Accueil</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Vente - {{ vente.nom }}</li>
                </ul>
            </nav>
        </div>

        <!-- 📋 Vente Details -->
        <div class="row">
            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Informations de la Vente</h4>
                        <ul class="list-unstyled">
                            <li><strong>📌 ID :</strong> {{ vente.id }}</li>
                            <li><strong>📅 Date :</strong> {{ vente.date ? vente.date|date('Y-m-d H:i:s') : 'N/A' }}</li>
                            <li><strong>💰 Prix :</strong> {{ vente.prix }} €</li>
                            <li><strong>💳 Méthode de Paiement :</strong> {{ vente.methodepayement }}</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <!-- 🖼️ Image du Produit -->
            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Produit Associé</h4>
                        {% if vente.produit and vente.produit.image %}
                            <img src="{{ asset('img/stock/' ~ vente.produit.image) }}" alt="{{ vente.produit.nom }}" class="img-fluid rounded shadow" style="max-width: 100%; height: auto;">
                        {% else %}
                            <p class="text-danger">Aucune image disponible pour ce produit.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- 🎯 Actions -->
        <div class="row">
            <div class="col-lg-12 text-center mt-4">
                <a href="{{ path('app_vente_index') }}" class="btn btn-gradient-primary me-2">
                    <i class="mdi mdi-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_vente_edit', {'id': vente.id}) }}" class="btn btn-gradient-warning">
                    <i class="mdi mdi-pencil"></i> Modifier
                </a>
                {{ include('vente/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
