{% extends 'base.html.twig' %}

{% block title %}Stock index{% endblock %}

{% block body %}
    <h1>Stock index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Date_stock</th>
                <th>Quantite_initiale</th>
                <th>Quantite_utilise</th>
                <th>Date_expiration</th>
                <th>Lieu</th>
                <th>Conditionn</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.id }}</td>
                <td>{{ stock.quantite }}</td>
                <td>{{ stock.dateStock ? stock.dateStock|date('Y-m-d') : '' }}</td>
                <td>{{ stock.quantiteInitiale }}</td>
                <td>{{ stock.quantiteUtilise }}</td>
                <td>{{ stock.dateExpiration ? stock.dateExpiration|date('Y-m-d') : '' }}</td>
                <td>{{ stock.lieu }}</td>
                <td>{{ stock.conditionn }}</td>
                <td>{{ stock.statut }}</td>
                <td>
                    <a href="{{ path('app_stock_show', {'id': stock.id}) }}">show</a>
                    <a href="{{ path('app_stock_edit', {'id': stock.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stock_new') }}">Create new</a>
{% endblock %}
