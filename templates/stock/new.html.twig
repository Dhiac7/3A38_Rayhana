{% extends 'baseAdmin.html.twig' %}

{% block title %}Ajouter stock{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title text-center"> Ajouter stock</h4>
                        {{ form_start(form, {'method': 'POST', 'action': path('app_stock_new'), 'attr': {'novalidate': 'novalidate','class': 'contact-form'}}) }}
                        
                        {% for error in form.vars.errors %}
                            <div class="text-danger">{{ error.message }}</div>
                        {% endfor %}
                        
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">{{ message }}</div>
                            {% endfor %}
                        {% endfor %}

                        <div class="form-group">
                            {{ form_label(form.nom, 'Nom du stock') }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du produit'}}) }}
                            <div class="text-danger">{{ form_errors(form.nom) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.date_stock, 'Date de stock') }}
                            {{ form_widget(form.date_stock, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.date_stock) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.date_expiration, 'Date d\'expiration') }}
                            {{ form_widget(form.date_expiration, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.date_expiration) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.lieu, 'Lieu de stockage') }}
                            {{ form_widget(form.lieu, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le lieu de stockage'}}) }}
                            <div class="text-danger">{{ form_errors(form.lieu) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.conditionn, 'Condition de stockage') }}
                            {{ form_widget(form.conditionn, {'attr': {'class': 'form-select'}}) }}
                            <div class="text-danger">{{ form_errors(form.conditionn) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.statut, 'Statut') }}
                            {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                            <div class="text-danger">{{ form_errors(form.statut) }}</div>
                        </div>

                        <button type="submit" class="btn btn-gradient-primary me-2 w-100">
                            <i class="mdi mdi-content-save"></i> Ajouter stock
                        </button> 

                        {{ form_end(form) }}

                        <div class="text-center mt-3">
                            <a href="{{ path('app_stock_index') }}" class="btn btn-secondary">
                                <i class="mdi mdi-arrow-left"></i> Retour Ã  la liste
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- content-wrapper -->
</div> <!-- main-panel -->
{% endblock %}
