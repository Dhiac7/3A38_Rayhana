{% extends 'base.html.twig' %}

{% block title %}Modifier un atelier{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier un atelier</h1>

        <div class="card shadow p-4">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.nom) }}
            </div> 
<div class="mb-3">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.description) }}
            </div>



                 <div class="mb-3">
                {{ form_label(form.date_atelier) }}
                {{ form_widget(form.date_atelier, { 'attr': {'class': 'form-control', 'type': 'date'} }) }}
                {{ form_errors(form.date_atelier) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.capacite_max) }}
                {{ form_widget(form.capacite_max, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.capacite_max) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix, {  'attr': {'class': 'form-control', 'required': 'required', 'min': '1', 'step': '0.01'} }) }}
                {{ form_errors(form.prix) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.statut) }}
                {{ form_widget(form.statut, { 'class': 'form-select', 'required': 'required' }) }}
                {{ form_errors(form.statut) }}
            </div>

            <button class="btn btn-success">Mettre Ã  jour</button>
            <a href="{{ path('app_atelier_index') }}" class="btn btn-secondary">Annuler</a>

            {{ form_end(form) }}
        </div>

        <div class="mt-3">
            {{ include('atelier/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
