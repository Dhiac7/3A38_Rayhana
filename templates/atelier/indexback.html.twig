{% extends 'baseAdmin.html.twig' %}

{% block title %}Liste des Ateliers{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                <span class="page-title-icon bg-gradient-info text-white me-2">
                    <i class="mdi mdi-view-list"></i>
                </span> Liste des Ateliers
            </h3>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tous les ateliers disponibles</h4>

                        <div class="table-responsive">
                            <table class="table table-bordered" id="atelierTable">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Description</th>
                                        <th>Date de l'Atelier</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% if pagination|length > 0 %}
                                        {% for atelier in pagination %}
                                            <tr>
                                                <td>{{ atelier.nom }}</td>
                                                <td>{{ atelier.description }}</td>
                                                <td>{{ atelier.dateAtelier ? atelier.dateAtelier|date('d M Y') : 'Date non définie' }}</td>
                                                <td>
                                                    <a href="{{ path('app_atelier_showback', {'id': atelier.id}) }}" class="btn btn-info btn-sm">
                                                        <i class="mdi mdi-eye"></i> Afficher
                                                    </a>
                                                    <a href="{{ path('app_vente_new', {'id': atelier.id}) }}" class="btn btn-success btn-sm">
                                                        <i class="mdi mdi-cart"></i> Réserver
                                                    </a>
                                                    <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}" class="btn btn-warning btn-sm">
                                                        <i class="mdi mdi-pencil"></i> Modifier
                                                    </a>
                                                    {{ include('atelier/_delete_form.html.twig', {'atelier': atelier}) }}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center">Aucun atelier disponible.</td>
                                        </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-center mt-3">
                            {{ knp_pagination_render(pagination) }}
                        </div>

                      <div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white me-2" id="toggleForm">
            <i class="mdi mdi-plus"></i>
        </span> Ajouter un Atelier
    </h3>
</div>

                    </div>
                </div>
            </div>
        </div>
    </div> <!-- content-wrapper -->
</div> <!-- main-panel -->

<!-- Script pour activer le tri et la recherche -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        $('#atelierTable').DataTable({
            "ordering": true, // Activer le tri par colonne
            "paging": true, // Activer la pagination
            "searching": true, // Activer la recherche
            "pageLength": 6, // Nombre d'éléments par page
            "lengthChange": false, // Désactiver le menu de modification du nombre d'éléments par page
            "language": {
                "url": "{{ asset('js/French.json') }}"
            }
        });
    });
</script>
{% endblock %}
