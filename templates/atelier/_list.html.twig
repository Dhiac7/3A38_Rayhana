
{% block body %}
<div class="main-panel">
  <div class="content-wrapper">
    <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-center">Liste des Ateliers</h4>
          <p class="card-description text-center">Voici tous les ateliers disponibles.</p>

          <!-- Conteneur des ateliers -->
          <div id="atelier-container">
              {% for atelier in ateliers %}
                  <div class="card mb-3 atelier-card" data-id="{{ atelier.id }}">
                      <div class="row g-0 align-items-center">
                          <div class="col-md-4">
                              {% if atelier.photo %}
                                  <img src="{{ asset('uploads/' ~ atelier.photo) }}" alt="Image de l'atelier" class="img-fluid rounded-start">
                              {% else %}
                                  <img src="{{ asset('img/atelier/default.jpg') }}" alt="Image non disponible" class="img-fluid rounded-start">
                              {% endif %}
                          </div>
                          <div class="col-md-8">
                              <div class="card-body">
                                  <h5 class="card-title">{{ atelier.nom }}</h5>
                                  <p class="card-text">{{ atelier.description }}</p>
                                  <p class="card-text"><strong>Date:</strong> {{ atelier.dateAtelier|date("d/m/Y") }}</p>
                                  <p class="card-text"><strong>Prix:</strong> {{ atelier.prix }} TND</p>
                                  <p class="card-text"><strong>Statut:</strong> {{ atelier.statut }}</p>
                                  <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}" class="btn btn-primary">Modifier</a><br>
                                  <a href="#" class="btn btn-danger btn-delete" data-id="{{ atelier.id }}">Supprimer</a>
                              </div>
                          </div>
                      </div>
                  </div>
              {% else %}
                  <p class="text-center">Aucun atelier trouvé.</p>
              {% endfor %}
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<!-- Script JavaScript pour la suppression AJAX -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    // Supprimer un atelier
    document.querySelectorAll('.btn-delete').forEach(function (button) {
        button.addEventListener('click', function (e) {
            e.preventDefault();
            let atelierId = this.getAttribute('data-id');

            fetch("{{ path('app_atelier_delete_ajax') }}", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ id: atelierId }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Si la suppression a réussi, tu peux supprimer l'élément de la page
                    document.querySelector(`[data-id='${atelierId}']`).closest('.atelier-card').remove();
                } else {
                    alert("Erreur lors de la suppression : " + data.message);
                }
            });
        });
    });
});



</script>
{% endblock %}
