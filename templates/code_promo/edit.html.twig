{% extends 'baseAdmin.html.twig' %}

{% block title %}Modifier CodePromo{% endblock %}

{% block body %}
<div class="container py-5">
   <div class="row justify-content-center">
       <div class="col-md-10">
           <div class="card shadow-lg border-0 rounded-lg">
               <div class="card-header text-white py-3" style="background-color: #49a760;">
                   <h4 class="card-title mb-0 text-center">Modifier le CodePromo</h4>
               </div>
               <div class="card-body p-5">
                   {{ form_start(form, {'attr': {'class': 'forms-sample needs-validation'}}) }}

                   {# Code #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.code) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.code, {'attr': {'class': 'form-control rounded-3'}}) }}
                           {{ form_errors(form.code, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# RÃ©duction #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.reduction) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.reduction, {'attr': {'class': 'form-control rounded-3'}}) }}
                           {{ form_errors(form.reduction, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Date d'expiration #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.date_expiration) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.date_expiration, {'attr': {'class': 'form-control rounded-3 flatpickr-input'}}) }}
                           {{ form_errors(form.date_expiration, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Actif #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.actif) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.actif, {'attr': {'class': 'form-check-input ms-2'}}) }}
                       </div>
                   </div>

                   {# Boutons #}
                   <div class="form-group row mt-5">
                       <div class="col-12 text-center">
                           <button type="submit" class="btn me-3" style="background-color: #49a760; color: white; border: none;">
                               <i class="fas fa-save me-2"></i>Modifier
                           </button>
                           <a href="{{ path('app_code_promo_index') }}" class="btn btn-light">
                               <i class="fas fa-times me-2"></i>Annuler
                           </a>
                       </div>
                   </div>

                   {{ form_end(form) }}
               </div>
           </div>
       </div>
   </div>
</div>
{% endblock %}
