{# templates/roulette/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Roulette de réductions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .roulette-container {
            width: 300px;
            height: 300px;
            margin: 20px auto;
            position: relative;
        }
        
        .roulette {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            position: relative;
            overflow: hidden;
            transition: transform 5s cubic-bezier(0.25, 0.1, 0.25, 1);
            transform: rotate(0deg);
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
        }
        
        .segment {
            position: absolute;
            width: 50%;
            height: 50%;
            left: 50%;
            top: 0;
            transform-origin: 0% 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
        
        .segment-content {
            position: absolute;
            width: 100px;
            text-align: center;
            font-weight: bold;
            color: white;
            transform: rotate(90deg);
            text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        }
        
        .pointer {
            position: absolute;
            top: -20px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 0;
            border-left: 15px solid transparent;
            border-right: 15px solid transparent;
            border-top: 20px solid #333;
            z-index: 10;
        }
        
        .btn-spin {
            display: block;
            margin: 20px auto;
            padding: 12px 24px;
            background-color: #4CAF50;
            color: white;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .btn-spin:hover {
            background-color: #45a049;
        }
        
        .result {
            margin-top: 30px;
            text-align: center;
            font-size: 24px;
            display: none;
        }
        
        .code {
            font-weight: bold;
            font-family: monospace;
            background-color: #f5f5f5;
            padding: 10px;
            border-radius: 5px;
            margin-top: 10px;
            display: inline-block;
        }
        
        .view-codes {
            display: block;
            margin: 10px auto;
            text-align: center;
            color: #333;
            text-decoration: none;
            font-weight: bold;
        }
        
        .view-codes:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const buttonSpin = document.getElementById('btn-spin');
            const roulette = document.getElementById('roulette');
            const resultDiv = document.getElementById('result');
            
            buttonSpin.addEventListener('click', function() {
                // Désactiver le bouton pendant le tour
                buttonSpin.disabled = true;
                buttonSpin.textContent = 'La roulette tourne...';
                resultDiv.style.display = 'none';
                
                // Appel AJAX pour obtenir la réduction
                fetch('{{ path('app_roulette_tourner') }}', {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Faire tourner la roue avec l'angle déterminé
                        const segments = {{ reductions|length }};
                        const segmentSize = 360 / segments;
                        
                        // Déterminer l'angle de rotation
                        // Rotation supplémentaire de 5 tours + angle spécifique pour atterrir sur la bonne réduction
                        const rotationAngle = 1800 + data.angle;
                        
                        // Animer la roulette
                        roulette.style.transform = `rotate(${rotationAngle}deg)`;
                        
                        // Afficher le résultat après l'animation
                        setTimeout(() => {
                            resultDiv.innerHTML = `
                                <p>Félicitations ! Vous avez gagné une réduction de 
                                <strong>${data.reduction.valeur}</strong></p>
                                <p>Votre code de réduction :</p>
                                <div class="code">${data.code}</div>
                            `;
                            resultDiv.style.display = 'block';
                            
                            // Réactiver le bouton
                            buttonSpin.disabled = false;
                            buttonSpin.textContent = 'Tourner la roulette';
                        }, 5000); // Afficher après 5 secondes (durée de l'animation)
                    }
                })
                .catch(error => {
                    console.error('Erreur:', error);
                    buttonSpin.disabled = false;
                    buttonSpin.textContent = 'Tourner la roulette';
                });
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5">Roulette de réductions</h1>
        <p class="text-center">Tentez votre chance pour gagner une réduction sur votre commande !</p>
        
        <div class="roulette-container">
            <div class="pointer"></div>
            <div id="roulette" class="roulette">
                {% for reduction in reductions %}
                    <div class="segment" style="transform: rotate({{ loop.index0 * (360 / reductions|length) }}deg); background-color: {{ reduction.couleur }};">
                        <div class="segment-content">{{ reduction.valeur }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
        <button id="btn-spin" class="btn-spin">Tourner la roulette</button>
        
        <div id="result" class="result"></div>
        
        <a href="{{ path('app_roulette_codes') }}" class="view-codes">Voir mes codes de réduction</a>
    </div>
{% endblock %}