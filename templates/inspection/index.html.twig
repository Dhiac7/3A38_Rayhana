{% extends 'baseAdmin.html.twig' %}

{% block title %}Inspection{% endblock %}

{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header py-3" style="background-color: #49a760; color: white;">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title mb-0">Liste des Inspections</h4>
                            <a href="{{ path('app_inspection_new') }}" class="btn" style="background-color: #fff; color: #2F4F4F;">
                                <i class="mdi mdi-plus me-2"></i> Ajouter une Inspection
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-4" style="background-color: #fff;">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr style="background-color: #8FBC8F; color: #2F4F4F;">
                                        <th> ID </th>
                                        <th> Date Inspection </th>
                                        <th> Résultat </th>
                                        <th> Note </th>
                                        <th> Actions </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for inspection in inspections %}
                                    <tr>
                                        <td> {{ inspection.id }} </td>
                                        <td> {{ inspection.dateInspection ? inspection.dateInspection|date('d/m/Y H:i:s') : 'N/A' }} </td>
                                        <td> {{ inspection.resultat }} </td>
                                        <td> {{ inspection.note }} </td>
                                        <td>
                                            <a href="{{ path('app_inspection_show', {'id': inspection.id}) }}" class="btn btn-sm" style="background-color: #fff; color: #2F4F4F;">
                                                <i class="mdi mdi-eye"></i> 
                                            </a>
                                            <a href="{{ path('app_inspection_edit', {'id': inspection.id}) }}" class="btn btn-sm" style="background-color: #fff; color: #2F4F4F;">
                                                <i class="mdi mdi-pencil"></i> 
                                            </a>
                                            {{ include('inspection/_delete_form.html.twig') }}
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center py-4">
                                            <div class="alert" style="background-color: #E8F5E9; color: #2F4F4F; border-color: #A5D6A7;">
                                                <i class="fas fa-info-circle me-2"></i>
                                                Aucune inspection trouvée
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
