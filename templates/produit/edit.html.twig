{% extends 'baseAdmin.html.twig' %}

{% block title %}Modifier Produit{% endblock %}

{% block body %}
<div class="container py-5">
   <div class="row justify-content-center">
       <div class="col-md-10">
           <div class="card shadow-lg border-0 rounded-lg">
               <div class="card-header text-white py-3" style="background-color: #49a760;">
                   <h4 class="card-title mb-0 text-center">Modifier le Produit</h4>
               </div>
               <div class="card-body p-5">
                   {{ form_start(form, {'attr': {'class': 'forms-sample needs-validation'}}) }}

                   {# Stock #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.stock) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.stock, {'attr': {'class': 'form-select rounded-3'}}) }}
                           {{ form_errors(form.stock, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Nom #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.nom) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.nom, {'attr': {'class': 'form-control rounded-3'}}) }}
                           {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Image (optionnelle) #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.image) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.image, {'attr': {'class': 'form-control rounded-3'}}) }}
                           {{ form_errors(form.image, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Quantité #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.quantite) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.quantite, {'attr': {'class': 'form-control rounded-3'}}) }}
                           {{ form_errors(form.quantite, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Prix de vente #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.prix_vente) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.prix_vente, {'attr': {'class': 'form-control rounded-3'}}) }}
                           {{ form_errors(form.prix_vente, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Statut #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.statut) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.statut, {'attr': {'class': 'form-select rounded-3'}}) }}
                           {{ form_errors(form.statut, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Description globale #}
                   <div class="form-group row mb-4">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.description_globale) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.description_globale, {'attr': {'class': 'form-control rounded-3', 'rows': '3'}}) }}
                           {{ form_errors(form.description_globale, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Description détaillée #}
                   <div class="form-group row mb-4">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.description_detaille) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.description_detaille, {'attr': {'class': 'form-control rounded-3', 'rows': '5'}}) }}
                           {{ form_errors(form.description_detaille, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Catégorie #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.categorie) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.categorie, {'attr': {'class': 'form-select rounded-3'}}) }}
                           {{ form_errors(form.categorie, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# En Promotion #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.enPromotion) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.enPromotion, {'attr': {'class': 'form-check-input ms-2'}}) }}
                       </div>
                   </div>

                   {# Pourcentage promo #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.pourcentage_promo) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.pourcentage_promo, {'attr': {'class': 'form-control rounded-3'}}) }}
                           {{ form_errors(form.pourcentage_promo, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Date début promo #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.date_debut_promo) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.date_debut_promo, {'attr': {'class': 'form-control rounded-3 flatpickr-input'}}) }}
                           {{ form_errors(form.date_debut_promo, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Date fin promo #}
                   <div class="form-group row mb-4 align-items-center">
                       <label class="col-sm-3 col-form-label fw-bold">{{ form_label(form.date_fin_promo) }}</label>
                       <div class="col-sm-9">
                           {{ form_widget(form.date_fin_promo, {'attr': {'class': 'form-control rounded-3 flatpickr-input'}}) }}
                           {{ form_errors(form.date_fin_promo, {'attr': {'class': 'text-danger'}}) }}
                       </div>
                   </div>

                   {# Boutons #}
                   <div class="form-group row mt-5">
                       <div class="col-12 text-center">
                           <button type="submit" class="btn me-3" style="background-color: #49a760; color: white; border: none;">
                               <i class="fas fa-save me-2"></i>Modifier
                           </button>
                           <a href="{{ path('app_produitback_index') }}" class="btn btn-light">
                               <i class="fas fa-times me-2"></i>Annuler
                           </a>
                       </div>
                   </div>

                   {{ form_end(form) }}
               </div>
           </div>
       </div>
   </div>
</div>
{% endblock %}
