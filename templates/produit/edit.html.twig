{% extends 'baseAdmin.html.twig' %}

{% block title %}Modifier Produit{% endblock %}

{% block body %}
<div class="container py-5">
   <div class="row justify-content-center">
       <div class="col-md-10">
           <div class="card shadow-lg border-0 rounded-lg">
               <div class="card-header bg-primary text-white py-3">
                   <h4 class="card-title mb-0 text-center">Modifier le produit</h4>
               </div>
               <div class="card-body p-5">
                   {# Ajout du JavaScript pour appliquer les classes #}
                   <script>
                       document.addEventListener('DOMContentLoaded', () => {
                           // Appliquer les classes globalement
                           const applyClasses = (selector, classes) => {
                               document.querySelectorAll(selector).forEach(el => {
                                   classes.forEach(cls => el.classList.add(cls));
                               });
                           };

                           applyClasses('input:not([type="hidden"]):not([type="checkbox"]):not([type="radio"])', ['form-control', 'form-control-lg', 'rounded-3']);
                           applyClasses('select', ['form-select', 'rounded-3']);
                           applyClasses('textarea', ['form-control', 'rounded-3']);
                           applyClasses('label', ['fw-bold', 'mb-2']);
                           applyClasses('.invalid-feedback', ['text-danger']);

                           const submitButton = document.querySelector('button[type="submit"]');
                           if (submitButton && !submitButton.querySelector('i.fas.fa-save')) {
                               const icon = document.createElement('i');
                               icon.classList.add('fas', 'fa-save', 'me-2');
                               submitButton.prepend(icon);
                               submitButton.classList.add('btn', 'btn-success', 'me-3');
                           }
                       });
                   </script>

                   <form method="post">
                       <!-- Ajoute ici ton formulaire (tu peux inclure _form.html.twig) -->
                       {{ include('produit/_form.html.twig', {'button_label': 'Modifier produit'}) }}

                       <div class="form-group row mt-5">
                           <div class="col-12 text-center">
                               <button type="submit" class="btn btn-success me-3">
                                   <i class="fas fa-save me-2"></i>Modifier stock
                               </button>
                               <a href="{{ path('app_produitback_index') }}" class="btn btn-light">
                                   <i class="fas fa-times me-2"></i> Retour Ã  la liste
                               </a>
                           </div>
                       </div>
                   </form>
               </div>
           </div>
       </div>
   </div>
</div>

{% block stylesheets %}
<style>
   .card {
       transition: all 0.3s ease;
       border: none;
   }

   .card-header {
       background-color: #198754 !important;
       border-bottom: 3px solid #146c43;
   }

   .form-control:focus, 
   .form-select:focus {
       border-color: #198754;
       box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
   }

   .form-control, 
   .form-select {
       height: 45px;
       border: 1px solid #ddd;
   }

   .btn {
       padding: 10px 25px;
       border-radius: 4px;
       font-weight: 500;
       transition: all 0.3s ease;
       height: 45px;
       display: inline-flex;
       align-items: center;
       justify-content: center;
   }

   .btn-success {
       background-color: #198754;
       border: none;
       color: white;
   }

   .btn-success:hover {
       background-color: #146c43;
       transform: translateY(-1px);
   }

   .btn-light {
       background-color: #f8f9fa;
       border: 1px solid #ddd;
       color: #212529;
   }

   .btn-light:hover {
       background-color: #e2e6ea;
       border-color: #ddd;
   }
   
   .form-label {
       color: #444;
       font-weight: 500;
   }

   .card-body {
       background-color: #fff;
   }

   .shadow-lg {
       box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
   }

   .text-danger {
       font-size: 0.875rem;
       margin-top: 0.25rem;
   }

   .btn:active {
       transform: translateY(1px);
   }
   
   .form-group {
       margin-bottom: 1.5rem;
   }
   
   label {
       display: block;
       margin-bottom: 0.5rem;
   }
   
   .form-control,
   .form-select,
   .custom-select {
       height: calc(2.5em + 0.75rem + 2px);
   }

   textarea.form-control {
       height: auto;
       min-height: 100px;
   }
</style>
{% endblock %}

{% endblock %}
