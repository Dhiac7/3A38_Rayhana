{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('node_modules/@fullcalendar/core/main.css') }}">
    <link rel="stylesheet" href="{{ asset('node_modules/@fullcalendar/daygrid/main.css') }}">
    <link rel="stylesheet" href="{{ asset('node_modules/@fullcalendar/timegrid/main.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('node_modules/@fullcalendar/core/main.js') }}"></script>
    <script src="{{ asset('node_modules/@fullcalendar/daygrid/main.js') }}"></script>
    <script src="{{ asset('node_modules/@fullcalendar/timegrid/main.js') }}"></script>
    <script src="{{ asset('node_modules/@fullcalendar/interaction/main.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: '/api/events', // Endpoint pour récupérer les événements
            });
            calendar.render();
        });
    </script>
{% endblock %}

{% block body %}
    <h1>Calendrier des Ateliers</h1>
    <div id="calendar"></div>
{% endblock %}