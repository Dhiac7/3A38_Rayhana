{% extends 'base.html.twig' %}

{% block title %}Modifier une Culture Agricole{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier une Culture Agricole</h1>

        <div class="card shadow p-4">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate' }}) }}

            <div class="mb-3">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.type) }}
                {{ form_widget(form.type, { 'attr': {'class': 'form-select'} }) }}
                {{ form_errors(form.type) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.dateSemi) }}
                {{ form_widget(form.dateSemi, { 'attr': {'class': 'form-control', 'type': 'date'} }) }}
                {{ form_errors(form.dateSemi) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.superficie) }}
                {{ form_widget(form.superficie, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.superficie) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.statut) }}
                {{ form_widget(form.statut, { 'attr': {'class': 'form-select'} }) }}
                {{ form_errors(form.statut) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.rendementEstime) }}
                {{ form_widget(form.rendementEstime, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.rendementEstime) }}
            </div>

            <button class="btn btn-success">Mettre Ã  jour</button>
            <a href="{{ path('app_culture_agricole_index') }}" class="btn btn-secondary">Annuler</a>

            {{ form_end(form) }}
        </div>

        <div class="mt-3">
            {{ include('culture_agricole/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
