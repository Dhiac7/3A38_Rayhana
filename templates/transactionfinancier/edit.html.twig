{% extends 'baseAdmin.html.twig' %}

{% block title %}Edit Transactionfinancier{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="card-header bg-primary text-white text-center">
            <h3>Modifier la Transaction Financi√®re</h3>
        </div>
        <div class="card-body">
            <h5 class="sub-title text-center">Modifier les informations de la transaction</h5>
            
            {# Start Symfony Form #}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'contact-form contact-form'}}) }}
                {% for error in form.vars.errors %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endfor %}
                
                <div class="row mb-3">
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ form_errors(form.montant)}}
                            {{ form_widget(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Montant'}}) }}
                        </div>
                    </div>
                </div>
               

                <div class="row mb-3">
                    <div class="col-lg-12">
                        <div class="form-group">
                            {{ form_errors(form.type) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Type'}}) }}
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-lg-12">
                        
                    </div>
                </div>
                
                <div class="text-center">
                    <button type="submit" class="btn btn-success btn-sm">
                        <i class="mdi mdi-content-save"></i> Enregistrer
                    </button>
                </div>

            {{ form_end(form) }}
            {# End Symfony Form #}
        </div>
    </div>
</div>
{% endblock %}
